package com.exam.repository;

import java.util.List;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;
import com.exam.entity.Property;
import com.exam.entity.User;

@Repository
public interface PropertyRepository extends JpaRepository<Property, Long> {
    
    // This method fixes the "cannot find symbol" error in PropertyService
    List<Property> findByOwner(User owner);

    // Keep this if you need to find specifically by ID elsewhere
    List<Property> findByOwnerId(Long ownerId);

    @Query("SELECT p FROM Property p JOIN FETCH p.owner")
    List<Property> findAllWithOwners();
}