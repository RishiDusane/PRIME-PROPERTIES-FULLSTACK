package com.exam.auth;

import java.time.LocalDateTime;
import java.util.UUID;
import com.exam.entity.User;
import jakarta.persistence.*; // Use wildcards for brevity or specific imports
import lombok.Getter;
import lombok.Setter;

@Entity
@Table(name = "verification_tokens")
@Getter
@Setter
public class VerificationToken {

    @Id
    private String token;

    // FIX: Add OnDelete cascading logic via Hibernate annotations to handle DB-level constraints
    @OneToOne
    @JoinColumn(name = "user_id", nullable = false)
    private User user;

    private LocalDateTime expiryDate;

    public VerificationToken() {}

    public VerificationToken(User user, int minutesValidity) {
        this.token = UUID.randomUUID().toString();
        this.user = user;
        this.expiryDate = LocalDateTime.now().plusMinutes(minutesValidity);
    }

    public boolean isExpired() {
        return expiryDate.isBefore(LocalDateTime.now());
    }
}